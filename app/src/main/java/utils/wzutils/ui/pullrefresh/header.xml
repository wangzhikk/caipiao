<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
        <ProgressBar android:id="@+id/wzrefresh_progressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar" android:layout_width="25dp"
            android:layout_height="25dp" android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/wzrefresh_tv"
            android:layout_toStartOf="@+id/wzrefresh_tv" />
        <TextView android:id="@+id/wzrefresh_tv" android:layout_width="60dp"
            android:layout_height="20dp" android:layout_centerInParent="true"
            android:gravity="center_vertical" android:text="正在刷新" android:textColor="#999999"
            android:textSize="14dp" />

    </RelativeLayout>


</RelativeLayout>
