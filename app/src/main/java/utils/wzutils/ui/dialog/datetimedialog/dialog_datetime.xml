<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="选择时间"
            android:gravity="center"
            android:textColor="@color/tv_h2"
            />
        <View style="@style/line_h"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" android:orientation="horizontal">
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="年" android:textColor="@color/tv_h2" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="月" android:textColor="@color/tv_h2" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="日" android:textColor="@color/tv_h2" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="时" android:textColor="@color/tv_h2" android:gravity="center"/>
            <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="分" android:textColor="@color/tv_h2" android:gravity="center"/>
        </LinearLayout>
        <View style="@style/line_h"></View>
        <LinearLayout android:layout_width="match_parent" android:layout_height="130dp" android:orientation="horizontal">
            <utils.wzutils.ui.dialog.datetimedialog.DatePickerView android:layout_width="0dp" android:layout_weight="1"  android:layout_height="match_parent" />
            <utils.wzutils.ui.dialog.datetimedialog.DatePickerView android:layout_width="0dp" android:layout_weight="1"  android:layout_height="match_parent" />
            <utils.wzutils.ui.dialog.datetimedialog.DatePickerView android:layout_width="0dp" android:layout_weight="1"  android:layout_height="match_parent" />
            <utils.wzutils.ui.dialog.datetimedialog.DatePickerView android:layout_width="0dp" android:layout_weight="1"  android:layout_height="match_parent" />
            <utils.wzutils.ui.dialog.datetimedialog.DatePickerView android:layout_width="0dp" android:layout_weight="1"  android:layout_height="match_parent" />
        </LinearLayout>
        <View style="@style/line_h"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" android:orientation="horizontal">
            <TextView
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/tv_h2"
                />
            <View style="@style/line_v"></View>
            <TextView
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确定"
                android:gravity="center"
                android:textColor="@color/tv_hongse"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
