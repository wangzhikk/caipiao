<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/tank_tips"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <utils.wzutils.ui.textview.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/textview" android:textSize="@dimen/tv_larage17"
            android:layout_marginTop="5dp"
            android:text="提示"
            />


        <TextView style="@style/textview" android:textColor="@color/tv_h2"
            android:lineSpacingExtra="5dp"
            android:text="您好，该时间段暂未提供相关服务，请在10:00:00-凌晨2:00:00尝试操作，干些您的支持！"
            android:layout_marginBottom="30dp"
            />
        <TextView style="@style/textview" android:textColor="@color/tv_h2"
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="爱乐客服"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>



</RelativeLayout>
