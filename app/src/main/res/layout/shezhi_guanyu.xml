<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:background="@color/tv_hongse"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <include layout="@layout/title"></include>

        <LinearLayout android:layout_margin="15dp"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/drawable_yuanjiao_baise">

            <utils.wzutils.ui.clicp.RoundImageView
                android:id="@+id/imgv_guanyu_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_launcher"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/tv_app_name_version"
                style="@style/textview"
                android:text="@string/app_name"
                android:textColor="#ff555555"
                android:textSize="15dp"
                android:layout_marginBottom="30dp"
                />

            <ImageView
                android:id="@+id/img_guanyu_ma"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:src="@drawable/banner"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:id="@+id/tv_guanyu_xiazai"
                style="@style/textview"
                android:text="扫描上方二维码下载乐富豪客户端"
                android:textColor="#ff555555"
                android:textSize="15dp"
                />
            <View android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"></View>
            <TextView
                style="@style/textview"
                android:layout_marginBottom="25dp"
                android:text="官网网址：http://www.ile18.com/"
                android:textColor="#ff4491fe"
                android:textSize="12dp"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
