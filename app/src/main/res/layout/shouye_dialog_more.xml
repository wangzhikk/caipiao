<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >



    <LinearLayout
        android:layout_marginRight="8dp"
        android:background="@drawable/kk_index_more" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/btn_shouye_chongzhi" android:textColor="@color/tv_hongse"
            style="@style/textview" android:text="充值"
            android:layout_height="50dp" android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/icon_index_chongzhi" />
        <View style="@style/line_h"></View>
        <TextView
            style="@style/textview"  android:textColor="@color/tv_hongse"
            android:text="提现"
            android:id="@+id/btn_shouye_tixian"
            android:layout_height="50dp" android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/icon_index_tixian" />

    </LinearLayout>




</RelativeLayout>
