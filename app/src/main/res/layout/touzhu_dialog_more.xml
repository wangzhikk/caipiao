<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >



    <LinearLayout
        android:layout_marginRight="5dp"
        android:background="@drawable/kk_bet_more" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/btn_touzhu_jilu" android:textColor="@color/tv_hongse"
            style="@style/textview" android:text="投注记录"
            android:layout_height="50dp" android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/icon_bet_record" />
        <View style="@style/line_h"></View>
        <TextView
            style="@style/textview"  android:textColor="@color/tv_hongse"
            android:text="玩法介绍"
            android:id="@+id/btn_touzhu_jieshao"
            android:layout_height="50dp" android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/icon_bet_play" />
        <View style="@style/line_h"></View>
        <TextView
            android:id="@+id/btn_touzhu_zoushi"   android:textColor="@color/tv_hongse"
            style="@style/textview" android:text="走势图"
            android:layout_height="50dp" android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:drawableLeft="@drawable/icon_bet_chart" />
    </LinearLayout>




</RelativeLayout>
