<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:src="@drawable/bg_login"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btn_login_close"
        android:src="@drawable/icon_login_close"
        android:scaleType="centerInside"
        android:layout_width="50dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginTop="110dp"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo_wenzi" />



        <EditText
                android:id="@+id/et_login_account"
                style="@style/tv_denglu_input"
                android:drawableLeft="@drawable/icon_login_username"
                android:hint="请输入账号"
                />
        <EditText
            android:id="@+id/et_login_pwd"
            style="@style/tv_denglu_input"
            android:drawableLeft="@drawable/icon_login_password"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/btn_login"
            style="@style/textview" android:background="@drawable/input_login"
            android:layout_width="match_parent"
            android:textSize="@dimen/tv_larage17"
            android:text="登录"  android:gravity="center" android:textColor="@color/white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_go_zhuce"
                style="@style/textview" android:text="马上注册"
                android:paddingTop="11dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/btn_wangji_mima"
                style="@style/textview" android:text="忘记密码?" android:layout_alignParentRight="true"
                android:paddingTop="11dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
