<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:background="@drawable/kk_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <RelativeLayout android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView android:id="@+id/tv_shouye_gundong_name" style="@style/textview_small" android:textColor="@color/tv_lanse_name" android:text="范蓝蓝" />
                    <TextView android:id="@+id/tv_shouye_gundong_time" android:layout_alignParentRight="true" style="@style/textview_small" android:textColor="@color/tv_lanse_name" android:text="范蓝蓝" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:id="@+id/tv_shouye_gundong_des" style="@style/textview_small"  tools:text="秒前投注了前投注了北京28北京28 50北京28 5000代币"  android:layout_marginRight="10dp"  android:textColor="@color/tv_h1" android:singleLine="true"/>
                    <TextView android:id="@+id/tv_shouye_gundong_jine" style="@style/textview" android:textColor="@color/tv_hongse" tools:text="100"   android:layout_weight="1" />
                    <utils.wzutils.ui.textview.BoldTextView android:id="@+id/tv_shouye_gundong_type" style="@style/textview_small"  tools:text="大"   android:textColor="@color/tv_h1"  />
                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>

</RelativeLayout>
